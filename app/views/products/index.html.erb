<%= form_tag products_add_path, method: :post do %>
     <%= label_tag "Enter product" %><br>
     <%= text_field_tag :product %><br>

     <%= submit_tag "add to cart" %>
<% end %>
<div>
     <ul>
          <% cart.each do |item| %>
               <li><%= item %></li>
          <% end %>
     </ul>
</div>